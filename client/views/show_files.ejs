<html><body>
<table border="1" cellpadding="7" cellspacing="7">
  <tr>
    <th width="50px">No</th>
    <th>File Name</th>
  </tr>
  <% if(data.length){ 
    for(var i = 0;i < data.length;i++) { %>
  <tr>
    <td><%=(i+1)%></td>
    <td><%=data[i].field1%></td>
    <td><%=data[i].field2%></td>
  </tr>
  <% }
  }else{ %>
  <tr>
    <td colspan="2">No files</td>
  </tr>
<% } %>
</table>
</body></html>
